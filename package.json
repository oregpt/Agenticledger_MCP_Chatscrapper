{
  "name": "@agenticledger/chatscraper-mcp",
  "version": "1.0.0",
  "description": "MCP server for scraping Telegram and Slack channels",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "chatscraper-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "test": "npm run build && node dist/tests/test-integration.js",
    "test:integration": "npm run build && node dist/tests/test-integration.js",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "telegram",
    "slack",
    "scraper",
    "chat",
    "agenticledger"
  ],
  "author": "AgenticLedger",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@slack/web-api": "^7.0.0",
    "telegram": "^2.22.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
